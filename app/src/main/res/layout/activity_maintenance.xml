<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/plainbackground2"
    android:padding="5dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:paddingTop="10dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:layout_height="70dp">
            <TextView
                android:layout_weight="2"
                android:layout_width="fill_parent"
                android:id="@+id/MaintenanceLabel"
                android:layout_height="fill_parent"
                android:textSize="15sp"
                android:gravity="center"
                android:text="EDIT TICKET: "
                android:padding="10dp"
                android:background="@drawable/maintenance_label" />
            <View
                android:layout_width="5dp"
                android:layout_height="fill_parent"/>
            <Spinner
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawSelectorOnTop="true"
                android:paddingLeft="10dp"
                android:id="@+id/MaintenanceSpinner"
                android:entries="@array/maintenance_spinner"
                android:background="@drawable/maintenance_dropdown">
            </Spinner>
        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="3dp"
        android:background="#ff000000">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/actionbarbackground">
            <View
                android:layout_width="45dp"
                android:layout_height="fill_parent"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/MaintenanceAddItem"
                android:background="@drawable/add_icon" />
            <View
                android:layout_width="25dp"
                android:layout_height="fill_parent"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/MaintenanceUndoChanges"
                android:background="@drawable/undo_icon" />
            <View
                android:layout_width="25dp"
                android:layout_height="fill_parent"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/MaintenanceSaveChanges"
                android:background="@drawable/save_icon" />
            <View
                android:layout_width="25dp"
                android:layout_height="fill_parent"/>
            <Button
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:enabled="true"
                android:id="@+id/MaintenanceClearItems"
                android:background="@drawable/delete_icon" />
            <View
                android:layout_width="50dp"
                android:layout_height="fill_parent"/>
        </LinearLayout>
        </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
        <ListView
            android:layout_weight="1"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:descendantFocusability="afterDescendants"
            android:dividerHeight="10.0px"
            android:id="@+id/MaintenanceListView">
        </ListView>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:id="@+id/CountdownEditor"
            android:background="@drawable/titlebox">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="DAY"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#ff656565"
                    android:id="@+id/day_label"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="HR"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#ff656565"
                    android:id="@+id/hour_label"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="MIN"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#ff656565"
                    android:id="@+id/minute_label"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="SEC"
                    android:padding="5dp"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="#ff656565"
                    android:id="@+id/second_label"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/up_button"
                    android:id="@+id/day_up"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/up_button"
                    android:id="@+id/hour_up"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/up_button"
                    android:id="@+id/minute_up"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/up_button"
                    android:id="@+id/second_up"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/databox1"
                    android:id="@+id/days"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/databox1"
                    android:id="@+id/hours"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/databox1"
                    android:id="@+id/minutes"/>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:background="@drawable/databox1"
                    android:id="@+id/seconds"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/down_button"
                    android:id="@+id/day_down"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/down_button"
                    android:id="@+id/hour_down"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/down_button"
                    android:id="@+id/minute_down"/>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/down_button"
                    android:id="@+id/second_down"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
</LinearLayout>
