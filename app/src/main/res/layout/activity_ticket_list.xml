<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="0dp">
    <LinearLayout
        android:id="@+id/list_background"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:paddingTop="7dp"
        android:paddingLeft="6dp"
        android:paddingBottom="5dp"
        android:paddingRight="6dp"
        android:background="@drawable/active_list_background">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:padding="2dp"
            android:layout_marginBottom="5dp"
            android:background="#ff000000">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:background="@drawable/actionbarbackground"
                android:paddingTop="5dp"
                android:paddingLeft="0dp"
                android:paddingBottom="3dp"
                android:paddingRight="0dp">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:padding="0dp">
                <Button
                    android:layout_width="30dp"
                    android:visibility="visible"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/search"
                    android:background="@drawable/search_icon"/>
                <Button
                    android:layout_width="30dp"
                    android:visibility="visible"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/delete"
                    android:layout_gravity="center"
                    android:background="@drawable/delete_icon"/>
                <Button
                    android:layout_width="30dp"
                    android:visibility="visible"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center"
                    android:layout_height="30dp"
                    android:id="@+id/complete"
                    android:background="@drawable/complete_icon"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:gravity="right"
                    android:paddingTop="0dp"
                    android:paddingRight="10dp">
                    <pjcbm9.quicket.CustomViews.SpartanButton
                        android:layout_width="150dp"
                        android:layout_height="33dp"
                        android:gravity="center"
                        android:textSize="15sp"
                        android:paddingTop="0dp"
                        android:layout_marginTop="-2dp"
                        android:layout_marginBottom="1dp"
                        android:text=" SEARCH OPTIONS "
                        android:id="@+id/bar_button"
                        android:background="@drawable/bar_button" />.SpartanButton
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/complete_bar">
            <pjcbm9.quicket.CustomViews.SpartanButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/ListCompleteB"
                android:textSize="18sp"
                android:background="@drawable/trendygreen3"
                android:text="COMPLETE" />.SpartanButton
            <Button
                android:layout_width="75dp"
                android:visibility="visible"
                android:layout_height="fill_parent"
                android:id="@+id/CancelListCompleteB"
                android:layout_marginLeft="5dp"
                android:checked="true"
                android:background="@drawable/cancelbutton2" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:id="@+id/delete_bar">
            <pjcbm9.quicket.CustomViews.SpartanButton
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/ListDeleteB"
                android:textSize="18sp"
                android:background="@drawable/listdeletebutton"
                android:text="DELETE" />.SpartanButton
            <Button
                android:layout_width="75dp"
                android:visibility="visible"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5dp"
                android:id="@+id/CancelListDeleteB"
                android:checked="true"
                android:background="@drawable/cancelbutton" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/search_bar">
            <pjcbm9.quicket.CustomViews.SpartanEditText
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/search_dialog"
                android:textSize="15sp"
                android:background="@drawable/text_box" />.SpartanEditText
            <pjcbm9.quicket.CustomViews.SpartanButton
                android:layout_width="50dp"
                android:visibility="visible"
                android:layout_height="fill_parent"
                android:id="@+id/search_button"
                android:textSize="12sp"
                android:checked="true"
                android:background="@drawable/search_button"/>.SpartanButton
            <Button
                android:layout_width="50dp"
                android:visibility="visible"
                android:layout_height="fill_parent"
                android:id="@+id/search_cancel_button"
                android:checked="true"
                android:background="@drawable/cancel_button3" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:paddingTop="5dp"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">
            <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/TicketListView"
                android:layout_centerVertical="false"
                android:layout_centerHorizontal="true"
                android:choiceMode="singleChoice"
                android:dividerHeight="10.0px"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="6"
        android:id="@+id/vertical_bar"
        android:orientation="vertical"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:paddingTop="7dp"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:paddingRight="5dp"
        android:background="@drawable/active_vertical_bar">
    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="fill_parent"
        android:padding="2dp"
        android:background="#ff000000">
        <pjcbm9.quicket.Ticket_List_Package.VerticalTextButton
            android:layout_weight="1"
            android:id="@+id/ActiveB"
            android:gravity="center"
            android:text="ACTIVE"
            android:textSize="15sp"
            android:paddingTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/vertical_button" />
        <pjcbm9.quicket.Ticket_List_Package.VerticalTextButton
            android:layout_weight="1"
            android:id="@+id/OverdueB"
            android:gravity="center"
            android:text="OVERDUE"
            android:textSize="15sp"
            android:paddingTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/vertical_button" />
        <pjcbm9.quicket.Ticket_List_Package.VerticalTextButton
            android:layout_weight="1"
            android:id="@+id/CompletedB"
            android:gravity="center"
            android:text="COMPLETED"
            android:textSize="16sp"
            android:paddingTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/vertical_button" />
        <pjcbm9.quicket.Ticket_List_Package.VerticalTextButton
            android:layout_weight="1"
            android:id="@+id/DraftB"
            android:gravity="center"
            android:text="DRAFT"
            android:textSize="15sp"
            android:paddingTop="7dp"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/vertical_button"/>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>
