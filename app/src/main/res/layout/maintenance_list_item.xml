<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/maintenance_row"
    android:paddingLeft="5dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingRight="5dp">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:layout_weight="3"
        android:text="###"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:id="@+id/maintenance_itemnumber"
        android:background="@drawable/maintenance_number_box" />
    <EditText
        android:layout_width="fill_parent"
        android:layout_weight="1"
        android:layout_height="fill_parent"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:id="@+id/maintenance_edittext"
        android:background="@drawable/maintenance_item"/>
    <Button
        android:layout_width="fill_parent"
        android:layout_weight="3"
        android:layout_height="fill_parent"
        android:id="@+id/maintenance_delete"
        android:background="@drawable/maintenance_delete" />
</LinearLayout>