<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pjcbm9.quicket" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/quicketlogo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NewTicket"
            android:label="@string/title_activity_new_ticket" >
        </activity>
        <activity
            android:name=".ticketView"
            android:label="@string/title_activity_ticket_view" >
        </activity>
        <activity
            android:name=".Maintenance"
            android:label="@string/title_activity_maintenance" >
        </activity>
        <activity
            android:name=".AlarmActivity"
            android:label="@string/title_activity_alarm" >
        </activity>

        <receiver android:name=".AlarmManagerHelper" />

        <activity
            android:name=".Ticket_List"
            android:label="@string/title_activity_ticket__list" >
        </activity>
    </application>

</manifest>
